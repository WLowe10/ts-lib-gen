{
	"name": "create-ts-lib",
	"version": "1.0.0",
	"description": "Create a TS library with create-ts-lib",
	"license": "MIT",
	"type": "module",
	"keywords": [
		"create-ts-lib",
		"typescript"
	],
	"author": {
		"name": "Wes Lowe",
		"email": "wesley.jlowe10@gmail.com"
	},
	"scripts": {
		"build": "tsup src/index.ts --dts --format esm",
		"format": "prettier --write .",
		"publish-package": "pnpm build && pnpm publish",
		"clean": "pnpm clean:dist && pnpm clean:modules",
		"clean:dist": "rm -rm dist",
		"clean:modules": "rm -rm node_modules",
		"type-check": "tsc --noEmit"
	},
	"bin": {
		"create-ts-lib": "./dist/index.js"
	},
	"files": [
		"dist",
		"template",
		"package.json",
		"README.md"
	],
	"dependencies": {
		"@clack/prompts": "^0.7.0",
		"chalk": "^5.3.0",
		"execa": "^9.3.0",
		"mustache": "^4.2.0"
	},
	"devDependencies": {
		"@types/mustache": "^4.2.5",
		"@types/node": "^20.14.10",
		"prettier": "^3.3.2",
		"tsup": "^8.1.0",
		"tsx": "^4.16.2",
		"typescript": "^5.5.3"
	}
}
